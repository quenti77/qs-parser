[flake8]
select = ANN,B,B9,C,DAR,E,F,N,RST,S,W
ignore = E203,E501,RST201,RST203,RST301,W503
docstring-convention = google
rst-roles = class,const,func,meth,mod,ref
rst-directives = deprecated
exclude =
    .git,
    __pycache__,
    *.egg-info,
    .nox,
    .pytest_cache,
    .mypy_cache
per-file-ignores =
      tests/*:S101,B950
